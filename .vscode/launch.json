{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/src",
        "envFile": "${workspaceFolder}/.env"
      },
      {
        "name": "Python: Streamlit",
        "type": "debugpy",
        "request": "launch",
        "module": "streamlit",
        "args": [
          "run",
          "${workspaceFolder}/src/app.py"
        ],
        "console": "integratedTerminal",
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env"
      }
    ]
  }